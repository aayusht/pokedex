<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.pokedex.mdb.pokedex.PokemonActivity"
    tools:showIn="@layout/activity_scrolling">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="Number: "
            android:id="@+id/number"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Attack: "
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/number"
            app:layout_constraintLeft_toLeftOf="@+id/number"
            android:id="@+id/attack" />

        <TextView
            android:text="Defense: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/defense"
            app:layout_constraintLeft_toLeftOf="@+id/attack"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/attack" />

        <TextView
            android:text="HP: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/defense"
            app:layout_constraintLeft_toLeftOf="@+id/defense" />

        <TextView
            android:text="Species: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/species"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/hp"
            app:layout_constraintLeft_toLeftOf="@+id/hp" />

    </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.NestedScrollView>
